<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <% @posts.each do |p| %>
            <div class="post-preview" id="<%= p.id %>">
                <ul>
                    <h2 class="post-title">
                        <%=link_to "#{p.title}", post_path(p) %>
                    </h2>
                    <h3 class="post-subtitle">
                        <%= p.body %>
                    </h3>
                </a>
                <p class="post-meta">Post by:
                    <%= p.user.user_name %>
                    <i><%= time_ago_in_words(p.created_at) %>
                        ago</i>
                </p>
                    <span>
                        <%= link_to like_path(p, {view: 'index'}), method: :put do %>
                        <button type="button" class="btn btn-info">LOL Welcome to Hollwyood!
                        <%= p.get_upvotes.size %>
                        </button>
                        <% end %>
                    </span>
                    <span>
                        <%= link_to dislike_path(p, {view: 'index'}), method: :put do %>
                        <button type="button" class="btn btn-warning">You should Quit...
                        <%= p.get_downvotes.size %>
                      </button>
                        <% end %>
                    </span>
                    <hr>
            </ul>
            <% end %>
        </div>
        <hr>
        <!-- Pager -->
        <ul class="pager">
